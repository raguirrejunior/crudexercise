

<div class="row">
    <div class="col-6"><h1>Customers</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addcust" type="button" class="btn btn-success align-self-center">+ add new customer</a>
    </div>


</div>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Cust ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="align-middle">

    {{#each rows}}  
    <tr>
      <th scope="row">{{this.cust_id}}</th>
      <td>{{this.cust_firstname}}</td>
      <td>{{this.cust_lastname}}</td>
      <td>{{this.cust_address}}</td>
      <td>{{this.cust_phone}}</td>
      <td>{{this.cust_email}}</td>
      <td>{{this.cust_status}}</td>
      <td>
        <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
        <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
      </td>
    </tr>
    {{/each}} 


  </tbody>
</table>